@model OnlineMovieTicketBooking.Models.UPI

@{
    ViewBag.Title = "UPI Payment";

}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3 style="font-family:Cambria;text-align:center">UPI Payment</h3>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <table align="center">
            <tr>
                <td>
                    @Html.LabelFor(model => model.Name, "Name", htmlAttributes: new { @class = "control-label" })
                </td>
                <td>

                    @Html.TextBoxFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.UPIId, "UPI ID", htmlAttributes: new { @class = "control-label" })
                </td>
                <td>

                    @Html.TextBoxFor(model => model.UPIId, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UPIId, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.UPIPIN, "UPI PIN", htmlAttributes: new { @class = "control-label" })
                </td>
                <td>

                    @Html.PasswordFor(model => model.UPIPIN, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UPIPIN, "", new { @class = "text-danger" })
                </td>
                <td></td>
            </tr>

            <tr>
                <td></td>
                <td align="center">


                    <a href="~/ticketnews/Search" class="btn btn-danger" onclick="MyFunction()">Make Payment</a>
                    <a href="~/SeatType1/Create" class="btn btn-danger">Cancel</a>
                </td>
                </tr>
           

            


        </table>

    </div>



}

<script>
    function MyFunction() {
        alert("Payment Successful");
    }

</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
