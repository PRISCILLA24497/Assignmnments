@model OnlineMovieTicketBooking.Models.SeatType1

@{
    ViewBag.Title = "Create";
}
<h2 style="font-family:Cambria">Book Ticket</h2>

@using (Html.BeginForm("Welcome", "SeatType1", FormMethod.Post))
{
    @Html.AntiForgeryToken()



    <div class="container p-3 my-3 bg bg-danger btn-group-justified">
        <div class="form-group" style="color:black;font-family:Cambria;font-size:larger">
            @Html.LabelFor(model => model.type, "Choose Seat Type", htmlAttributes: new { @class = "" })

            @Html.LabelFor(model => model.type, "Diamond", htmlAttributes: new { @class = "" })

            @Html.RadioButtonFor(model => model.type, "Diamond", htmlAttributes: new { @class = "" })

            @Html.ValidationMessageFor(model => model.type, "", new { @class = "text-danger" })


            @Html.LabelFor(model => model.type, "Platinum", htmlAttributes: new { @class = "" })

            @Html.RadioButtonFor(model => model.type, "Platinum", htmlAttributes: new { @class = "" })

            @Html.ValidationMessageFor(model => model.type, "", new { @class = "text-danger" })


            @Html.LabelFor(model => model.type, "Silver", htmlAttributes: new { @class = "" })

            @Html.RadioButtonFor(model => model.type, "Silver", htmlAttributes: new { @class = "" })

            @Html.ValidationMessageFor(model => model.type, "", new { @class = "text-danger" })

        </div>


        <div class="form-group" style="font-family:Cambria;font-size:medium">
            @Html.LabelFor(model => model.Persons, htmlAttributes: new { @class = "control-label col-sm-1" })
            <div class="col-md-10">

                @Html.TextBoxFor(model => model.Persons, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Persons, "", new { @class = "text-danger" })<br /><br />

                <input type="submit" value="submit" class="btn btn-danger" />
            </div>
            

         


        </div>
    </div>

}


